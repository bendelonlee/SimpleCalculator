<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >


    <TableRow
        android:gravity="center"

        android:paddingTop="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint1"
            android:id="@+id/edtNumber1"
            android:gravity="center"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            />
    </TableRow>

    <TableRow
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint2"
                android:id="@+id/edtNumber2"
                android:gravity="center"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                />
    </TableRow>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            style="@style/btnOperationStyle"
            android:tag="addition"
            android:text="+" />

        <Button
            style="@style/btnOperationStyle"
            android:tag="subtraction"
            android:text="-" />

        <Button
            style="@style/btnOperationStyle"
            android:tag="multiplication"
            android:text="x" />

        <Button
            style="@style/btnOperationStyle"
            android:tag="division"
            android:text="/" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/btnOperationStyle"
            android:tag="remainder"
            android:text="%" />

        <Button
            style="@style/btnOperationStyle"
            android:tag="exponent"
            android:text="^" />
    </TableRow>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >


        <TextView
            android:maxLength="10"
            android:gravity="center"
            android:id="@+id/txtResult"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="@string/txtResult" />

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="53dp" >


        </TableRow>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>

</TableLayout>
